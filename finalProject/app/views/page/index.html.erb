          <% DegreeInProgress.create(user_id: current_user.id, degree_id: 1) %>
          <%end%>
        <%end%> 
        <nav class= "navbar navbar-expand-sm navbar-light">
            <ul class= "navbar-nav">
              <li class = "nav-item active"><%= link_to 'Home', page_index_path, :class => "nav-link"%></li>
